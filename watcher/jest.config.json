{
  "preset": "ts-jest/presets/default-esm",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "setupFiles": ["./setup-jest.ts"],
  "testPathIgnorePatterns": ["sdk", "/node_modules/", "/dist/"]
}
